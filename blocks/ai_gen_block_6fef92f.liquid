{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-list-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
    overflow: hidden;
  }

  .ai-collection-list__container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-collection-list__heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.heading_spacing }}px;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
  }

  .ai-collection-list__wrapper-{{ ai_gen_id }} {
    overflow-x: auto;
    overflow-y: hidden;
    -webkit-overflow-scrolling: touch;
    scroll-snap-type: x mandatory;
    scrollbar-width: thin;
    scrollbar-color: {{ block.settings.scrollbar_color }} transparent;
    padding-bottom: 15px;
  }

  .ai-collection-list__wrapper-{{ ai_gen_id }}::-webkit-scrollbar {
    height: 8px;
  }

  .ai-collection-list__wrapper-{{ ai_gen_id }}::-webkit-scrollbar-track {
    background: transparent;
  }

  .ai-collection-list__wrapper-{{ ai_gen_id }}::-webkit-scrollbar-thumb {
    background-color: {{ block.settings.scrollbar_color }};
    border-radius: 10px;
  }

  .ai-collection-list__grid-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.gap }}px;
    width: max-content;
  }

  .ai-collection-list__item-{{ ai_gen_id }} {
    flex: 0 0 {{ block.settings.item_width }}px;
    scroll-snap-align: start;
    text-align: center;
  }

  .ai-collection-list__link-{{ ai_gen_id }} {
    display: block;
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease;
  }

  .ai-collection-list__link-{{ ai_gen_id }}:hover {
    transform: translateY(-8px);
  }

  .ai-collection-list__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    margin-bottom: {{ block.settings.title_spacing }}px;
    {% if block.settings.image_shape == 'round' %}
      border-radius: 50%;
    {% elsif block.settings.image_shape == 'rounded' %}
      border-radius: {{ block.settings.border_radius }}px;
    {% endif %}
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.12);
    transition: box-shadow 0.3s ease;
  }

  .ai-collection-list__link-{{ ai_gen_id }}:hover .ai-collection-list__image-wrapper-{{ ai_gen_id }} {
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.18);
  }

  .ai-collection-list__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-collection-list__placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-collection-list__placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.3;
  }

  .ai-collection-list__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    color: {{ block.settings.title_color }};
    margin: 0;
  }

  .ai-collection-list__count-{{ ai_gen_id }} {
    font-size: {{ block.settings.count_size }}px;
    color: {{ block.settings.count_color }};
    margin-top: 5px;
  }

  @media screen and (max-width: 749px) {
    .ai-collection-list__item-{{ ai_gen_id }} {
      flex: 0 0 {{ block.settings.item_width_mobile }}px;
    }

    .ai-collection-list__grid-{{ ai_gen_id }} {
      gap: {{ block.settings.gap_mobile }}px;
    }

    .ai-collection-list__heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }

    .ai-collection-list__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.9);
    }
  }
{% endstyle %}

<collection-list-{{ ai_gen_id }} class="ai-collection-list-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-collection-list__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-collection-list__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-collection-list__wrapper-{{ ai_gen_id }}">
      <div class="ai-collection-list__grid-{{ ai_gen_id }}">
        {% for i in (1..5) %}
          {% liquid
            assign collection_key = 'collection_' | append: i
            assign image_key = 'image_' | append: i
            assign title_key = 'title_' | append: i
            
            assign collection = block.settings[collection_key]
            assign custom_image = block.settings[image_key]
            assign custom_title = block.settings[title_key]
          %}

          <div class="ai-collection-list__item-{{ ai_gen_id }}">
            {% if collection != blank %}
              <a href="{{ collection.url }}" class="ai-collection-list__link-{{ ai_gen_id }}">
                <div class="ai-collection-list__image-wrapper-{{ ai_gen_id }}">
                  {% if custom_image != blank %}
                    <img
                      src="{{ custom_image | image_url: width: 600 }}"
                      alt="{{ custom_image.alt | escape }}"
                      class="ai-collection-list__image-{{ ai_gen_id }}"
                      loading="lazy"
                      width="600"
                      height="600"
                    >
                  {% elsif collection.featured_image %}
                    <img
                      src="{{ collection.featured_image | image_url: width: 600 }}"
                      alt="{{ collection.featured_image.alt | escape }}"
                      class="ai-collection-list__image-{{ ai_gen_id }}"
                      loading="lazy"
                      width="600"
                      height="600"
                    >
                  {% else %}
                    <div class="ai-collection-list__placeholder-{{ ai_gen_id }}">
                      {{ 'collection-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                </div>
                <h3 class="ai-collection-list__title-{{ ai_gen_id }}">
                  {% if custom_title != blank %}
                    {{ custom_title }}
                  {% else %}
                    {{ collection.title }}
                  {% endif %}
                </h3>
                {% if block.settings.show_product_count %}
                  <p class="ai-collection-list__count-{{ ai_gen_id }}">
                    {{ collection.products_count }} 
                    {% if collection.products_count == 1 %}
                      product
                    {% else %}
                      products
                    {% endif %}
                  </p>
                {% endif %}
              </a>
            {% else %}
              <div class="ai-collection-list__link-{{ ai_gen_id }}">
                <div class="ai-collection-list__image-wrapper-{{ ai_gen_id }}">
                  {% if custom_image != blank %}
                    <img
                      src="{{ custom_image | image_url: width: 600 }}"
                      alt="{{ custom_image.alt | escape }}"
                      class="ai-collection-list__image-{{ ai_gen_id }}"
                      loading="lazy"
                      width="600"
                      height="600"
                    >
                  {% else %}
                    <div class="ai-collection-list__placeholder-{{ ai_gen_id }}">
                      {{ 'collection-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                </div>
                <h3 class="ai-collection-list__title-{{ ai_gen_id }}">
                  {% if custom_title != blank %}
                    {{ custom_title }}
                  {% else %}
                    Collection {{ i }}
                  {% endif %}
                </h3>
                {% if block.settings.show_product_count %}
                  <p class="ai-collection-list__count-{{ ai_gen_id }}">0 products</p>
                {% endif %}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</collection-list-{{ ai_gen_id }}>

<script>
  (function() {
    class CollectionList{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupDragScroll();
      }

      setupDragScroll() {
        const wrapper = this.querySelector('.ai-collection-list__wrapper-{{ ai_gen_id }}');
        if (!wrapper) return;

        let isDown = false;
        let startX;
        let scrollLeft;

        wrapper.addEventListener('mousedown', (e) => {
          isDown = true;
          wrapper.style.cursor = 'grabbing';
          startX = e.pageX - wrapper.offsetLeft;
          scrollLeft = wrapper.scrollLeft;
        });

        wrapper.addEventListener('mouseleave', () => {
          isDown = false;
          wrapper.style.cursor = 'grab';
        });

        wrapper.addEventListener('mouseup', () => {
          isDown = false;
          wrapper.style.cursor = 'grab';
        });

        wrapper.addEventListener('mousemove', (e) => {
          if (!isDown) return;
          e.preventDefault();
          const x = e.pageX - wrapper.offsetLeft;
          const walk = (x - startX) * 2;
          wrapper.scrollLeft = scrollLeft - walk;
        });

        wrapper.style.cursor = 'grab';
      }
    }

    customElements.define('collection-list-{{ ai_gen_id }}', CollectionList{{ ai_gen_id }});
  })();
</script>

