{% doc %}
  @prompt
    make professional footer perticulR FOR THIS WEBSITE, ADD social media button option
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-footer-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
  }

  .ai-footer-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-footer-top-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 40px;
    padding-bottom: {{ block.settings.section_spacing }}px;
    border-bottom: {{ block.settings.divider_thickness }}px solid {{ block.settings.divider_color }};
  }

  .ai-footer-column-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ai-footer-logo-{{ ai_gen_id }} {
    max-width: {{ block.settings.logo_width }}px;
    height: auto;
  }

  .ai-footer-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    margin: 0 0 12px;
    color: {{ block.settings.heading_color }};
  }

  .ai-footer-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
    margin: 0;
  }

  .ai-footer-links-{{ ai_gen_id }} {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .ai-footer-link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: none;
    font-size: {{ block.settings.text_size }}px;
    transition: color 0.3s ease;
  }

  .ai-footer-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-footer-newsletter-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .ai-footer-newsletter-form-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
  }

  .ai-footer-input-{{ ai_gen_id }} {
    flex: 1;
    padding: 12px 16px;
    border: 1px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    background-color: {{ block.settings.input_background }};
    color: {{ block.settings.text_color }};
    font-size: 14px;
  }

  .ai-footer-input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.text_color }};
    opacity: 0.6;
  }

  .ai-footer-button-{{ ai_gen_id }} {
    padding: 12px 24px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    cursor: pointer;
    font-size: 14px;
    font-weight: 600;
    transition: background-color 0.3s ease;
    white-space: nowrap;
  }

  .ai-footer-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  .ai-footer-social-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    align-items: center;
    flex-wrap: wrap;
  }

  .ai-footer-social-link-{{ ai_gen_id }} {
    color: {{ block.settings.social_icon_color }};
    transition: color 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-footer-social-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.social_icon_hover_color }};
  }

  .ai-footer-social-link-{{ ai_gen_id }} svg {
    width: {{ block.settings.social_icon_size }}px;
    height: {{ block.settings.social_icon_size }}px;
  }

  .ai-footer-bottom-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: {{ block.settings.section_spacing }}px;
    gap: 20px;
    flex-wrap: wrap;
  }

  .ai-footer-copyright-{{ ai_gen_id }} {
    font-size: {{ block.settings.copyright_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
  }

  .ai-footer-payment-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
    align-items: center;
    flex-wrap: wrap;
  }

  .ai-footer-payment-icon-{{ ai_gen_id }} {
    height: 24px;
    width: auto;
    opacity: 0.7;
  }

  .ai-footer-success-{{ ai_gen_id }} {
    color: {{ block.settings.success_color }};
    font-size: 14px;
    margin-top: 8px;
  }

  .ai-footer-error-{{ ai_gen_id }} {
    color: {{ block.settings.error_color }};
    font-size: 14px;
    margin-top: 8px;
  }

  @media screen and (max-width: 749px) {
    .ai-footer-top-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 32px;
    }

    .ai-footer-bottom-{{ ai_gen_id }} {
      flex-direction: column;
      text-align: center;
    }

    .ai-footer-newsletter-form-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-footer-button-{{ ai_gen_id }} {
      width: 100%;
    }
  }
{% endstyle %}

