            {% if block.settings.care_link_5_text != blank and block.settings.care_link_5_url != blank %}
              <li><a href="{{ block.settings.care_link_5_url }}" class="ai-footer-link-{{ ai_gen_id }}">{{ block.settings.care_link_5_text }}</a></li>
            {% endif %}
          </ul>
        </div>
      {% endif %}

      {% if block.settings.show_newsletter %}
        <div class="ai-footer-column-{{ ai_gen_id }}">
          <h3 class="ai-footer-heading-{{ ai_gen_id }}">{{ block.settings.newsletter_heading }}</h3>
          <div class="ai-footer-text-{{ ai_gen_id }}">
            {{ block.settings.newsletter_text }}
          </div>
          
          {%- form 'customer', class: 'ai-footer-newsletter-{{ ai_gen_id }}' -%}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="ai-footer-newsletter-form-{{ ai_gen_id }}">
              <input
                type="email"
                name="contact[email]"
                class="ai-footer-input-{{ ai_gen_id }}"
                value="{{ form.email }}"
                aria-required="true"
                autocorrect="off"
                autocapitalize="off"
                autocomplete="email"
                {% if form.errors %}
                  aria-invalid="true"
                  aria-describedby="ai-footer-error-{{ ai_gen_id }}"
                {% endif %}
                {% if form.posted_successfully? %}
                  aria-describedby="ai-footer-success-{{ ai_gen_id }}"
                {% endif %}
                placeholder="{{ block.settings.newsletter_placeholder }}"
                required
              >
              <button type="submit" class="ai-footer-button-{{ ai_gen_id }}">
                {{ block.settings.newsletter_button_text }}
              </button>
            </div>
            {%- if form.errors -%}
              <div id="ai-footer-error-{{ ai_gen_id }}" class="ai-footer-error-{{ ai_gen_id }}">
                {{ form.errors.messages.email }}
              </div>
            {%- endif -%}
            {%- if form.posted_successfully? -%}
              <div id="ai-footer-success-{{ ai_gen_id }}" class="ai-footer-success-{{ ai_gen_id }}">
                {{ block.settings.newsletter_success_message }}
              </div>
            {%- endif -%}
          {%- endform -%}
        </div>
      {% endif %}
    </div>

    <div class="ai-footer-bottom-{{ ai_gen_id }}">
      <div class="ai-footer-copyright-{{ ai_gen_id }}">
        {{ block.settings.copyright_text }}
      </div>

      {% if block.settings.show_payment_icons %}
        <div class="ai-footer-payment-{{ ai_gen_id }}">
          {% if shop.enabled_payment_types.size > 0 %}
            {% for type in shop.enabled_payment_types %}
              {{ type | payment_type_svg_tag: class: 'ai-footer-payment-icon-' | append: ai_gen_id }}
            {% endfor %}
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</footer>

